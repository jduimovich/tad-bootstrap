SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )" 
source $SCRIPTDIR/configure  

CNAME=$1
IMAGE=$2
if [ -z "$CNAME" ]; then
     echo "Usage set-image component imagename"
     exit 0
fi
if [ -z "$IMAGE" ]; then
     echo "Usage set-image component imagename"
     exit 0
fi
  
bash $APP_PATH/$CNAME/edit/set-image "$APP_PATH/$CNAME" $IMAGE

git add .
git commit -m "Set image for component to $IMAGE"
git push 
