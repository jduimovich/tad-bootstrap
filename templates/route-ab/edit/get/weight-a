
COMPONENTS_ROOT=$1  
GETTER='.metadata.annotations.["tad.gitops.set/weight-a"]'

FILES="$COMPONENTS_ROOT/base/route.yaml   
for file in $FILES 
do
    KEY=$(yq "$GETTER" $file)
    if [  "$KEY" == "null" ]
    then     
        echo "$GETTER missing in $file"
    else   
        VALUE=$(yq e "$KEY" $file) 
        echo "$VALUE image in $file"
    fi
done

 