SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )" 
[ -x $SCRIPTDIR/configure ] && source $SCRIPTDIR/configure   
COUNTER=0 
if test -d $COMPONENTS_PATH; then 
    if test -f $COMPONENTS_PATH/README.md; then   
        desc=$(head -n 1 $COMPONENTS_PATH/README.md)
    fi
    echo "$(basename $COMPONENTS_PATH) based on template: $desc"
    for i in $COMPONENTS_PATH/*
    do
        printf "\t%s\n"  $(basename $i)   
    done 
    
else 
    echo "$COMPONENTS_PATH missing" 
fi


