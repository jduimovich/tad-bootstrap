SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )" 
source $SCRIPTDIR/configure   
COUNTER=0
if test -d $COMPONENTS_PATH; then 
    if test -f $COMPONENTS_PATH/README.md; then  
        desc="based on template: $(head -n 1 $COMPONENTS_PATH/README.md)"
    fi 
    FILES=$(ls -a -I . -I .. -I README.md $COMPONENTS_PATH)
    for files in $FILES
    do   
        echo "$(basename $files) $desc" 
    done
else 
    echo "$COMPONENTS_PATH missing" 
fi


