SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )" 

export ROOT=$(pwd)
APPS_ROOT=apps  
PROPS=$ROOT/$APPS_ROOT/tad.properties
if test -d $ROOT/$APPS_ROOT; then 
    if [ "$(ls -A $PROPS)" ]; then 
        source $PROPS 
    fi
else
    echo 
    echo "$ROOT is not a Gitops Repository"
    echo 
    exit 0 
fi  
  