

PHYSICAL_FILE=$(realpath $(readlink $0)) 
SCRIPTDIR=$(dirname $PHYSICAL_FILE) 
export TEMPLATE_DIR=$(realpath $SCRIPTDIR/../templates) 
export ROOT=$(pwd) 
 
CLI=$(basename $0) 
CMD=$1
shift

if [ -z "$CMD" ]; then
     echo "Usage: $CLI cmd"
     $SCRIPTDIR/ls
     exit 0
fi 
if test -f $SCRIPTDIR/$CMD; then 
    $SCRIPTDIR/$CMD $*
else 
    echo $CMD is an invalid command for $CLI
fi 